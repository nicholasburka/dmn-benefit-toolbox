meta {
  name: Pass - Resources Below Limit
  type: http
  seq: 1
}

post {
  url: {{host}}/checks/resources/ssi-resource-limit
  body: json
  auth: inherit
}

body:json {
  {
    "situation": {
      "people": [
        {
          "id": "p1",
