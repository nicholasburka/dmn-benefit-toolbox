meta {
  name: Pass - Blind or Disabled
  type: http
  seq: 1
}

post {
  url: {{host}}/checks/categorical/blind-or-disabled
  body: json
  auth: inherit
}

body:json {
  {
    "situation": {
      "people": [
        {
          "id": "p1",
          "isBlindOrDisabled": true
        }
      ]
    },
    "parameters": {
      "personId": "p1"
    }
  }
}

assert {
  res.status: eq 200
  res.body.checkResult: eq true
}

settings {
  encodeUrl: true
  timeout: 0
}
